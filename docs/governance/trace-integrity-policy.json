{
  "schema_version": "1.0.0",
  "deterministic_methods": [
    "exact_solver",
    "dag_walk",
    "deterministic_graph_diff"
  ],
  "stochastic_methods": [
    "mcts",
    "monte_carlo",
    "llm_generation"
